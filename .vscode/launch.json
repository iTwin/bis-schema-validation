  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run EC Tests",
      "program": "${workspaceFolder}/core/bentley/node_modules/@bentley/build-tools/scripts/test-tsnode.js",
      "cwd": "${workspaceFolder}/core/ecschema-metadata",
      "args": [
        "--testDir=${workspaceFolder}/core/ecschema-metadata/test",
        "--debug"
      ],
      "port": 9229,
      "protocol": "inspector",
      "outputCapture": "std"
    },
  "compounds": [
    {
      "name": "Run Testbed (all)",
      "configurations": [
        "_Testbed (frontend)",
        "_Testbed (backend)"
      ]
    },
    {
      "name": "Run Testbed (all-integration)",
      "configurations": [
        "Run EC Tests",
      ]
    },
  ]
}