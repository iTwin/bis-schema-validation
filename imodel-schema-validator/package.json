{
  "name": "@bentley/imodel-schema-validator",
  "description": "This tool validates an iModel's Schemas.",
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "version": "0.2.44",
  "bin": {
    "imodel-schema-validator": "./lib/index.js"
  },
  "scripts": {
    "build": "tsc 1>&2 && npm run copy:assets",
    "lint": "tslint --project . 1>&2",
    "test": "mocha -r ts-node/register test/**.test.ts --timeout 120000",
    "tests:ValidateReleasedBisSchemas": "mocha -r ts-node/register test/**.test.ts --grep \"Import latest released version of all schemas in bis-schemas repository into an iModel and perform all validations.\" --timeout 120000",
    "tests:ValidateWIPBisSchemas": "mocha -r ts-node/register test/**.test.ts --grep \"Import WIP version of all schemas from bis-schemas repository into an iModel and perform BIS-rules validation.\" --timeout 120000",
    "cover": "nyc node ./node_modules/@bentley/build-tools/scripts/test-tsnode.js --testDir=./test/ --tscPaths",
    "clean": "rimraf lib",
    "copy:assets": "cpx ./src/index.js ./lib"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "2.0.0-dev.71",
    "@bentley/ecschema-metadata": "2.0.0-dev.71",
    "@bentley/geometry-core": "2.0.0-dev.71",
    "@bentley/imodeljs-backend": "2.0.0-dev.71",
    "@bentley/imodeljs-clients": "2.0.0-dev.71",
    "@bentley/imodeljs-clients-backend": "2.0.0-dev.71",
    "@bentley/imodeljs-common": "2.0.0-dev.71",
    "@bentley/imodelhub-client": "2.0.0-dev.71",
    "@bentley/schema-comparer": "^0.2.44",
    "@bentley/schema-validator": "0.2.44",
    "@bentley/oidc-signin-tool": "2.0.0-dev.71",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "httpntlm": "~1",
    "js-sha1": "^0.6.0",
    "readdirp": "^3.0.0"
  },
  "devDependencies": {
    "@bentley/ecschema-locaters": "2.0.0-dev.71",
    "@bentley/build-tools": "^1.1",
    "@types/node": "10.12.18",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "cpx": "^1.5.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.3.1",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "ts-node": "^7.0.1"
  },
  "nyc": {
    "nycrc-path": "./node_modules/@bentley/build-tools/.nycrc",
    "lines": 80,
    "functions": 80,
    "report-dir": "./lib/test/coverage"
  }
}
