{
  "name": "@bentley/schema-roundtrip",
  "description": "Command line tool de-serializes and re-serializes a schmema with optional comparison.",
  "license": "MIT",
  "version": "0.2.166",
  "bin": {
    "schema-roundtrip": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "beforeBuild": "npm run clean && npm run copy:assets & npm run lint",
    "copy:assets": "cpx ./src/index.js ./lib",
    "build": "npm run beforeBuild && tsc",
    "test": "mocha",
    "test:watch": "betools test-tsnode --testDir=./test/ --watch",
    "cover": "nyc npm -s test",
    "cli-dev": "cd .. & rush publish --publish --pack --include-all & npm install -g ./common/temp/artifacts/packages/bentley-schema-roundtrip-0.2.8.tgz"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@itwin/eslint-plugin": "^3.7.3",
    "@itwin/build-tools": "^3.7.3",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "18.11.5",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7",
    "cpx2": "^3.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^7.1.1",
    "typescript": "~4.3.0",
    "eslint": "^7.11.0"
  },
  "peerDependencies": {
    "@itwin/ecschema-metadata": "^3.7.3",
    "@itwin/ecschema-locaters": "^3.7.3"
  },
  "dependencies": {
    "@itwin/core-bentley": "^3.7.3",
    "@itwin/core-geometry": "^3.7.3",
    "@itwin/core-backend": "^3.7.3",
    "@itwin/core-quantity": "^3.7.3",
    "@itwin/core-common": "^3.7.3",
    "@itwin/core-i18n": "^3.7.3",
    "@itwin/imodels-access-backend": "1.0.1",
    "@itwin/imodels-client-authoring": "1.0.1",
    "@bentley/schema-comparer": "0.2.166",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1",
    "@xmldom/xmldom": "~0.8.5"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "prefer-template": "off",
      "no-console": "off",
      "@typescript-eslint/no-unnecessary-type-assertion": "off"
    }
  }
}
