{
  "name": "@bentley/schema-roundtrip",
  "description": "Command line tool de-serializes and re-serializes a schmema with optional comparison.",
  "license": "MIT",
  "version": "1.0.0",
  "bin": {
    "schema-roundtrip": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "beforeBuild": "npm run clean && npm run copy:assets & npm run lint",
    "copy:assets": "cpx ./src/index.js ./lib",
    "build": "npm run beforeBuild && tsc",
    "test": "mocha",
    "test:watch": "betools test-tsnode --testDir=./test/ --watch",
    "cover": "nyc npm -s test",
    "cli-dev": "cd .. & rush publish --publish --pack --include-all & npm install -g ./common/temp/artifacts/packages/bentley-schema-roundtrip-0.2.8.tgz"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@itwin/eslint-plugin": "^4.0.2",
    "@itwin/build-tools": "5.0.4",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "^7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "~20.17.0",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^17.0.2",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "cpx2": "^8.0.0",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^17.0.2",
    "typescript": "~5.6.2",
    "eslint": "^8.56.0"
  },
  "peerDependencies": {
    "@itwin/ecschema-metadata": "5.0.4",
    "@itwin/ecschema-locaters": "5.0.4"
  },
  "dependencies": {
    "@itwin/core-bentley": "5.0.4",
    "@itwin/core-geometry": "5.0.4",
    "@itwin/core-backend": "5.0.4",
    "@itwin/core-quantity": "5.0.4",
    "@itwin/core-common": "5.0.4",
    "@itwin/core-i18n": "5.0.4",
    "@itwin/imodels-access-backend": "^5.2.2",
    "@bentley/schema-comparer": "1.0.0",
    "chalk": "^3.0.0",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1",
    "@xmldom/xmldom": "~0.8.10"
  }
}