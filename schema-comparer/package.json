{
  "name": "@bentley/schema-comparer",
  "description": "Command line tool that compares ECXml schemas.",
  "license": "MIT",
  "version": "0.2.160",
  "bin": {
    "schema-comparer": "./bin/index.js"
  },
  "main": "lib/SchemaComparison",
  "typings": "lib/SchemaComparison",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project . 1>&2",
    "beforeBuild": "npm run clean && npm run lint",
    "build": "npm run beforeBuild && tsc",
    "test": "betools test-tsnode --testDir=./test/",
    "test:watch": "betools test-tsnode --testDir=./test/ --watch",
    "cover": "nyc node ./node_modules/@bentley/build-tools/scripts/test-tsnode.js --testDir=./test/ --tscPaths",
    "cli-dev": "cd .. & rush publish --publish --pack --include-all & npm install -g ./common/temp/artifacts/packages/bentley-schema-comparer-0.2.0.tgz"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/build-tools": "^1.1",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.12.18",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.5",
    "@types/xml2js": "^0.4.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7",
    "cpx": "^1.5.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.11.0",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "1.9.0-dev.12",
    "@bentley/ecschema-metadata": "1.9.0-dev.12",
    "@bentley/geometry-core": "1.9.0-dev.12",
    "@bentley/imodeljs-backend": "1.9.0-dev.12",
    "@bentley/imodeljs-clients": "1.9.0-dev.12",
    "@bentley/imodeljs-clients-backend": "1.9.0-dev.12",
    "@bentley/imodeljs-common": "1.9.0-dev.12",
    "@bentley/imodeljs-i18n": "1.9.0-dev.12",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1"
  },
  "publishConfig": {
    "registry": "https://www.npmjs.com/"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html",
      "cobertura"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "functions": 90,
    "report-dir": "./lib/test/coverage"
  }
}
