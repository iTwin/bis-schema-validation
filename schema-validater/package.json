{
  "name": "@bentley/schema-validater",
  "description": "Command line tools validates an ECJson or ECXml schema.",
  "license": "MIT",
  "version": "0.8.0",
  "bin": {
    "validate-schema": "./lib/index.js"
  },
  "main": "./lib/main",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "scripts": {
    "clean": "rimraf lib",
    "copy:assets": "cpx ./source/index.js ./lib",
    "lint": "tslint --project . 1>&2",
    "prebuild": "npm run clean && npm run copy:assets & npm run lint",
    "build": "tsc",
    "test": "betools test-tsnode --testDir=./test/",
    "test:watch": "betools test-tsnode --testDir=./test/ --watch",
    "cli:dev": "npm run clean & npm run build & npm link",
    "cover": "nyc node ./node_modules/@bentley/build-tools/scripts/test-tsnode.js --testDir=./test/ --tscPaths"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/build-tools": "^0.173.0",
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.12.18",
    "@types/xml2js": "^0.4.3",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.5",
    "@types/chai-as-promised": "^7",
    "nyc": "^13.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "mocha": "^5.2.0",
    "typescript": "^3.3.1",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7",
    "cpx": "^1.5.0",
    "tsconfig-paths": "^3.3.2"
  },
  "dependencies": {
    "@bentley/imodeljs-backend": "0.189.0-dev.27",
    "@bentley/bentleyjs-core": "0.189.0-dev.27",
    "@bentley/geometry-core": "0.189.0-dev.27",
    "@bentley/imodeljs-clients": "0.189.0-dev.27",
    "@bentley/imodeljs-clients-backend": "0.189.0-dev.27",
    "@bentley/imodeljs-common": "0.189.0-dev.27",
    "@bentley/ecschema-metadata": "0.189.0-dev.27",
    "@bentley/bis-rules": "0.1.0",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1"
  },
  "publishConfig": {
    "registry": "https://www.npmjs.com/"
  },
  "nyc": {
    "include": [
      "source/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html",
      "cobertura"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "functions": 90,
    "report-dir": "./lib/test/coverage"
  }
}
