{
  "name": "@bentley/app-schema-validator",
  "description": "This tool validates schemas present in an application's installer",
  "main": "./lib/AppSchemaValidator.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "version": "1.0.0",
  "bin": {
    "app-schema-validator": "./bin/index.js"
  },
  "scripts": {
    "build": "tsc 1>&2 && npm run copy:assets && npm run copy:test-assets",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "mocha --timeout=999999999 --check-leaks --global _playwrightInstance",
    "cover": "nyc npm -s test",
    "clean": "rimraf lib",
    "copy:assets": "cpx ./ignoreSchemaList.json ./lib",
    "copy:test-assets": "cpx \"./src/test/assets/**/*\" ./lib/test/assets"
  },
  "dependencies": {
    "@itwin/ecschema-locaters": "5.0.4",
    "@itwin/ecschema-metadata": "5.0.4",
    "@bentley/imodel-schema-validator": "1.0.0",
    "chalk": "^3.0.0",
    "commander": "^2.19.0",
    "readdirp": "^3.0.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@itwin/eslint-plugin": "^4.0.2",
    "@itwin/build-tools": "5.0.4",
    "@types/node": "~20.17.0",
    "@types/chai": "4.3.1",
    "@types/mocha": "^10.0.6",
    "cpx2": "^8.0.0",
    "typescript": "~5.6.2",
    "chai": "^4.3.10",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "eslint": "^8.56.0"
  }
}