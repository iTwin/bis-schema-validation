{
  "name": "@bentley/bis-rules",
  "description": "Contains BIS rules for schema validation.",
  "license": "MIT",
  "version": "0.2.119",
  "main": "lib/bis-rules.js",
  "typings": "lib/bis-rules",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "beforeBuild": "npm run clean && npm run lint",
    "build": "npm run beforeBuild && tsc",
    "test": "betools test",
    "test:watch": "betools test --watch",
    "cover": "nyc npm test"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/build-tools": "2.19.1",
    "@bentley/eslint-plugin": "2.19.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^8.2.2",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.5",
    "@types/xml2js": "^0.4.3",
    "chai": "^4.2.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "source-map-support": "^0.5.9",
    "tsconfig-paths": "^3.3.2",
    "typescript": "~4.3.0",
    "eslint": "^6.8.0"
  },
  "peerDependencies": {
    "@bentley/ecschema-metadata": "3.0.0-dev.52",
    "@bentley/ecschema-editing": "3.0.0-dev.52"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "3.0.0-dev.52",
    "@bentley/imodeljs-backend": "3.0.0-dev.52"
  },
  "nyc": {
    "extends": "./node_modules/@bentley/build-tools/.nycrc"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended",
    "rules": {
      "prefer-template": "off",
      "dot-notation": "off",
      "@typescript-eslint/await-thenable": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-unnecessary-type-assertion": "off"
    }
  }
}
