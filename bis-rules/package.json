{
  "name": "@bentley/bis-rules",
  "description": "Contains BIS rules for schema validation.",
  "license": "MIT",
  "version": "0.2.144",
  "main": "lib/bis-rules.js",
  "typings": "lib/bis-rules",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "beforeBuild": "npm run clean && npm run lint",
    "build": "npm run beforeBuild && tsc",
    "test": "mocha",
    "cover": "nyc npm -s test"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@itwin/build-tools": "3.0.2",
    "@itwin/eslint-plugin": "3.0.2",
    "@itwin/ecschema-metadata": "3.0.2",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^8.2.2",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.5",
    "@types/xml2js": "^0.4.3",
    "ts-node": "^7.0.1",
    "chai": "^4.2.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "source-map-support": "^0.5.9",
    "tsconfig-paths": "^3.3.2",
    "typescript": "~4.3.0",
    "eslint": "^7.11.0"
  },
  "peerDependencies": {
    "@itwin/ecschema-metadata": "3.0.2",
    "@itwin/ecschema-editing": "3.0.2"
  },
  "dependencies": {
    "@itwin/core-bentley": "3.0.2",
    "@itwin/core-backend": "3.0.2"
  },
  "nyc": {
    "extends": "./node_modules/@itwin/build-tools/.nycrc",
    "require": [
      "ts-node/register"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "prefer-template": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-unnecessary-type-assertion": "off"
    }
  }
}
