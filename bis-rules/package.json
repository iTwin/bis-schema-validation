{
  "name": "@bentley/bis-rules",
  "description": "Contains BIS rules for schema validation.",
  "license": "MIT",
  "version": "0.1.0",
  "main": "lib/BisRules.js",
  "typings": "lib/BisRules",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/bis-schema-validation"
  },
  "scripts": {
    "clean": "rimraf lib",
    "copy:assets": "cpx ./source/index.js ./lib",
    "lint": "tslint --project . 1>&2",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "test": "betools test-tsnode --testDir=./test/",
    "test:watch": "betools test-tsnode --testDir=./test/ --watch",
    "cover": "nyc node ./node_modules/@bentley/build-tools/scripts/test-tsnode.js --testDir=./test/ --tscPaths"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/build-tools": "^0.173.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/xml2js": "^0.4.3",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.5",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "~3.2.2"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "file:C:/PlatformTech/imodeljs/core/bentley",
    "@bentley/imodeljs-backend": "file:C:/PlatformTech/imodeljs/core/backend",
    "@bentley/ecschema-metadata": "file:C:/PlatformTech/imodeljs/core/ecschema-metadata"
  },
  "publishConfig": {
    "registry": "https://www.npmjs.com/"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html",
      "cobertura"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "functions": 90,
    "report-dir": "./lib/test/coverage"
  }
}
